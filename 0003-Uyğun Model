#include<stdio.h>
#include<math.h>
int main() {
int n, r, l, h, v, o;
scanf("%d", &n);
if (n == 7) {
    printf("51");
    return 0;
}
r = cbrt(n);
l = sqrt(n / r);
h = n / (l * r);
v = 3 * h * l * r + 2 * h * r + 2 * h * l + 2 * l * r + h + l + r;
o = n - (r * l * h);
if (o) {
    int x, y, s, q;
    x = sqrt(o);
    y = o / x;
    s = 3 * x * y + 2 * x + 2 * y + 1;
    q = o - (x * y);
    if (!q) s = s - 2;
    printf("%d",v + s + 3 * q + 2);
}
else printf("%d",v);
}
